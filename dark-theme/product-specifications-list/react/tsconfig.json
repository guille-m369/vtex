{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "graphql"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
